    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "transform-object-assign"
    ]
  },
  "browserslist": [
    "> .05% in BE",
    "not ie <= 9"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "overrides": [
      {
        "files": ["*.js"],
        "rules": {
          "class-methods-use-this": "off",
          "no-param-reassign": "off"
        }
      },
      {
        "files": [
          "noiseBG.js",
          "htmlFactory.js"
        ],
        "rules": {
          "no-use-before-define": "off",
          "space-infix-ops": "off",
          "no-mixed-operators": "off",
          "global-require": "off",
          "no-plusplus": "off",
          "camelcase": "off",
          "no-unused-vars": "off",
          "radix": "off",
          "prefer-const": "off",
          "class-methods-use-this": "off",
          "prefer-destructuring": "off",
          "one-var": "off",
          "one-var-declaration-per-line": "off"
        }
      },
      {
        "files": [
          "utils.js",
          "static.js",
          "params.js"
        ],
        "rules": {
          "no-use-before-define": "off",
          "no-mixed-operators": "off",
          "no-param-reassign": "off",
          "max-classes-per-file": "off",
          "no-unused-vars": "off",
          "no-plusplus": "off"
        }
      }
    ],
    "ignorePatterns": [
      "webpack.*.js",
      "/public/**/*.js",
      "/client/*.js"
    ],
    "env": {
      "node": true,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": 2020
    }
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {
        "browsers": "last 2 versions"
      }
    }
  }
}
